{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "interfaces/*": ["interfaces/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
